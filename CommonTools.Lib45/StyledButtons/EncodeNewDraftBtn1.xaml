<UserControl x:Class="CommonTools.Lib45.StyledButtons.EncodeNewDraftBtn1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommonTools.Lib45.StyledButtons"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Content="{mat:PackIcon Kind=Plus, Size=24}"
            Visibility="{Binding EncodeNewDraftCmd, Converter={StaticResource visIfNotNull}}"
            Command="{Binding EncodeNewDraftCmd}"
            ToolTip="{Binding EncodeNewDraftCmd.CurrentLabel}"
            Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
            />
</UserControl>
