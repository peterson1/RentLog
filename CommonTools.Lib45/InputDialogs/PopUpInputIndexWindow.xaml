<Window x:Class="CommonTools.Lib45.InputDialogs.PopUpInputIndexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonTools.Lib45.InputDialogs"
        mc:Ignorable="d"
        Title="{Binding Caption}"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        FocusManager.FocusedElement="{Binding ElementName=cmbOptions}">
    <StackPanel Margin="60 30 60 50">
        <TextBlock Text="{Binding Message}"
                   Style="{StaticResource MaterialDesignSubheadingTextBlock}"/>
        <ComboBox x:Name="cmbOptions" 
                  ItemsSource="{Binding Options}"
                  SelectedIndex="{Binding Draft, UpdateSourceTrigger=PropertyChanged}"
                  MinWidth="300"
                  HorizontalContentAlignment="Center"
                  Margin="0 20 0 0" />

        <TextBlock Text="{Binding WhyInvalid}"
                   Margin="0 20 0 0" />

        <Button Content="{Binding SubmitCmd.CurrentLabel}"
                Command="{Binding SubmitCmd}"
                HorizontalAlignment="Right"
                Padding="40 0 40 0"
                Margin="0 10 0 0"
                IsDefault="True" />
    </StackPanel>
</Window>
