<UserControl x:Class="RentLog.ChequeVouchers.VoucherReqsTab.VouchersListPrint.ForCheckPreparationUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RentLog.ChequeVouchers.VoucherReqsTab.VouchersListPrint"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <TextBlock Text="{Binding ForPreparations.Count, StringFormat=For Check Preparation ({0})}"
                   DockPanel.Dock="Top" />

        <local:ForCheckPreparationTable DataContext="{Binding ForPreparations}" />
    </DockPanel>
</UserControl>
