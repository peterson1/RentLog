<UserControl x:Class="RentLog.Cashiering.SectionTabs.AmbulantCollections.AmbulantColxnsUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RentLog.Cashiering.SectionTabs.AmbulantCollections"
             xmlns:comn="clr-namespace:RentLog.Cashiering.CommonControls"
             xmlns:labl="clr-namespace:CommonTools.Lib45.TextLabels;assembly=CommonTools.Lib45"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <comn:LightColorZone DockPanel.Dock="Top" />

        <labl:DualText DockPanel.Dock="Bottom"
                       Text1="total"
                       HorizontalAlignment="Right"
                       Margin="0 5 10 5"
                       Text2="{Binding TotalSum, StringFormat=N2}" />

        <local:AmbulantColxnsTable />

    </DockPanel>
</UserControl>
