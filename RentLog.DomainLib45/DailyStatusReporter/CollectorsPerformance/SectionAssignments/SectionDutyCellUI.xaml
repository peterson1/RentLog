<UserControl x:Class="RentLog.DomainLib45.DailyStatusReporter.CollectorsPerformance.SectionAssignments.SectionDutyCellUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RentLog.DomainLib45.DailyStatusReporter.CollectorsPerformance.SectionAssignments"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="{Binding Collector.Name}"
                   FontWeight="Medium"
                   FontSize="15" />
        <TextBlock Text="{Binding Assignment}"
                   FontStyle="Italic"
                   />
    </StackPanel>
</UserControl>
