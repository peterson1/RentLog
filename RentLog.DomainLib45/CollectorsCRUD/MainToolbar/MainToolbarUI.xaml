<UserControl x:Class="RentLog.DomainLib45.CollectorsCRUD.MainToolbar.MainToolbarUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RentLog.DomainLib45.CollectorsCRUD.MainToolbar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="tbarHeadr1" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="8 0 0 0" />
        </Style>
        <Style x:Key="tbarLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20 0 15 0" />
        </Style>
    </UserControl.Resources>
    <Grid Margin="20 7 20 5">
        <TextBlock Text="{Binding Header}"
                   Style="{StaticResource tbarHeadr1}" />
    </Grid>
</UserControl>
