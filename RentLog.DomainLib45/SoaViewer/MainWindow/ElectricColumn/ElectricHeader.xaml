<UserControl x:Class="RentLog.DomainLib45.SoaViewer.MainWindow.ElectricColumn.ElectricHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RentLog.DomainLib45.SoaViewer.MainWindow.ElectricColumn"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Electric" Style="{DynamicResource soaColHdr}" />

        <StackPanel Style="{DynamicResource soaHdrStack}"
                    DataContext="{Binding DataContext.FirstRow, RelativeSource={RelativeSource AncestorType=DataGrid}}">
            <TextBlock Text="balance" Style="{DynamicResource soaHdrLabel}" />
            <TextBlock Text="{Binding Electric.OpeningBalance, StringFormat=N2}" 
                       Style="{DynamicResource soaHdrValue}"
                       FontWeight="Bold" />
        </StackPanel>

    </StackPanel>
</UserControl>