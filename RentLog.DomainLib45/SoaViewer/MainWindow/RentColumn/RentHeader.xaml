<UserControl x:Class="RentLog.DomainLib45.SoaViewer.MainWindow.RentColumn.RentHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RentLog.DomainLib45.SoaViewer.MainWindow.RentColumn"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Rent" Style="{DynamicResource soaColHdr}" />

        <StackPanel Style="{DynamicResource soaHdrStack}">
            <TextBlock Text="{Binding Rent.Interval}" Style="{DynamicResource soaHdrLabel}" />
            <TextBlock Text="{Binding Rent.RegularRate, StringFormat=N2}" Style="{DynamicResource soaHdrValue}" />
        </StackPanel>

        <StackPanel Style="{DynamicResource soaHdrStack}">
            <TextBlock Text="lease end" Style="{DynamicResource soaHdrLabel}" />
            <TextBlock Text="{Binding ContractEnd, StringFormat=d MMM yyyy}" Style="{DynamicResource soaHdrValue}" />
        </StackPanel>

    </StackPanel>
</UserControl>
